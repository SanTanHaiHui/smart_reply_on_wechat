/* components/config-panel/index.wxss */
.config-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.config-mask.show {
  opacity: 1;
  visibility: visible;
}

.config-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 1001;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.config-panel.show {
  transform: translateY(0);
}

/* 阻止事件冒泡的样式处理 */
.config-panel {
  touch-action: none;
}

.config-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.config-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  letter-spacing: -0.5rpx;
}

.close-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f5f5f7;
  color: #86868b;
  font-size: 32rpx;
  font-weight: 300;
  transition: background-color 0.2s;
}

.close-btn:active {
  background-color: #e8e8ed;
}

.config-content {
  padding: 32rpx 40rpx 40rpx;
  max-height: calc(80vh - 120rpx);
  overflow-y: auto;
}

.config-item {
  margin-bottom: 48rpx;
}

.config-item:last-child {
  margin-bottom: 0;
}

.config-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #1d1d1f;
  margin-bottom: 24rpx;
  letter-spacing: -0.3rpx;
}

.config-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.config-option {
  padding: 16rpx 32rpx;
  border-radius: 20rpx;
  background-color: #f5f5f7;
  color: #86868b;
  font-size: 28rpx;
  font-weight: 400;
  transition: all 0.2s ease;
  border: 2rpx solid transparent;
}

.config-option:active {
  transform: scale(0.98);
}

.config-option.active {
  background-color: #007aff;
  color: #ffffff;
  border-color: #007aff;
  font-weight: 500;
}

